<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/custom_actionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_score"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:text="temp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/H_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_actionBar"
        android:gravity="center_horizontal"
        android:text="Hint" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/H_hint"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:text="" />

    <LinearLayout
        android:id="@+id/Ll_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ln_holder"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginBottom="?android:actionBarSize"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_above="@+id/keyboard"
    android:id="@+id/ln_holder"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="?android:actionBarSize">

    <LinearLayout
        android:id="@+id/lives_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

    </LinearLayout>


    <ImageButton
        android:id="@+id/button_finish"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/bg_finish_button"
        android:layout_centerInParent="true"
        android:layout_marginRight="?android:actionBarSize"
        android:layout_alignParentRight="true"

        />

    <ImageButton
        android:id="@+id/button_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/bg_next_button"
        android:visibility="invisible" />

</RelativeLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </LinearLayout>


</RelativeLayout>
